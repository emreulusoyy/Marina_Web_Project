
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">


<body>
    <!--MENU SECTION STARTS-->
    <!--MENU SECTION ENDS-->
    <!--SLIDER SECTION STARTS-->
    @await Component.InvokeAsync("_SliderList")
 <!--SLIDER SECTION ENDS-->
    <!--ABOUT SECTION STARTS-->
    <section class="about section-padding">
        <div class="container" id="about">
            <div class="row">
                <div class="col-md-12">
                    @await Component.InvokeAsync("_HakkindaList")
                   
                    <div class="row">
                        @await Component.InvokeAsync("_VizyonList")
                        @await Component.InvokeAsync("_MisyonList")
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--ABOUT SECTION ENDS-->
    <!--SERVİCES SECTION STARTS-->
    <section id="services" class="services section-padding">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-header text-center pb-3">
                        <h3 key="2">HİZMETLERİMİZ</h3>
                        <p key="17">
                            Sektördeki son derece olumlu bilinirliğini, yüksek hizmet kalitesi,
                            müşteri odaklı çalışması, servislerinin garantili olması, sürekli
                            kendini yenileyen ve eğitimlerini aksatmayan güler yüzlü personeli,
                            iş disiplini ve takım çalışması sayesinde sürdürmektedir. 
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                @await Component.InvokeAsync("_TeknikServis")
                @await Component.InvokeAsync("_DenizHizmetleri")
                @await Component.InvokeAsync("_TekneBakim")

              
               
            </div>
        </div>
    </section>
    <!--SERVİCES SECTION ENDS-->
    <!--CONTACT SECTION ENDS-->
    <section id="contact" class="contact section-padding">
        <div class="container">
            <div class="row">
                <div class="section-header pb-5">
                    <div class="text-center">
                        <h3 key="3">İLETİŞİM</h3>
                        <h5 key="21">Daha da iyisi, gelin, yüz yüze görüşelim!</h5>
                        <p key="22" class="fs-5">
                            Müşterilerimize değer veriyoruz.
                            Mesai saatleri içinde bizi dilediğiniz zaman ziyaret edebilirsiniz.
                        </p>
                    </div><br>
                    <div class="row">
                        @await Component.InvokeAsync("_Iletisim")

                        <div class="col-md-6">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3265976.993561314!2d27.379924195660504!3d36.9278749
                                22025204!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14c06542108b2c3f%3A0x384771ac54844613!2zS1dNIE1BUsSwTiBFTE
                                VLVFLEsEsgRUxFS1RST07EsEsgTFRELiDFnlTEsC4!5e0!3m2!1str!2str!4v1675179038323!5m2!1str!2str" width="100%"
                                    height="400px" style="border:0;" allowfullscreen="" loading="lazy"
                                    referrerpolicy="no-referrer-when-downgrade"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--CONTACT SECTION ENDS-->
    <footer class="bg-dark p-2 text-center">
        <div class="container">
            <p key="27" class="text-white">Copyright © 2023 Tüm Hakları Saklıdır.</p>
        </div>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
            crossorigin="anonymous"></script>
</body>

</html>

