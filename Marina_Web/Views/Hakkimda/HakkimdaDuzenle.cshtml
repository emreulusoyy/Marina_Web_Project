@model EntityLayer.Concrete.Hakkında
@{
    ViewData["Title"] = "HakkimdaDuzenle";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div id="page-wrapper">
	<div class="main-page">
		<div class="tables">
			<div class="panel-body widget-shadow">
					<h4>Hakkımızda Düzenleme Sayfası</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    @Html.HiddenFor(x => x.HakkındaID, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Başlık</label>
                    @Html.TextBoxFor(x => x.HakkındaBaslik, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Değer</label>
                    @Html.TextBoxFor(x => x.HakkındaAcıklama, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button class="btn btn-dark">İptal</button>
            </form>
        </div>
    </div>
</div>
</div>


