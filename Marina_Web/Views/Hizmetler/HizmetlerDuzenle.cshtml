@model EntityLayer.Concrete.Hizmetler
@{
    ViewData["Title"] = "HizmetlerDuzenle";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div id="page-wrapper">
    <div class="main-page">
        <div class="tables">
            <div class="panel-body widget-shadow">
                    <h4>Hizmetler Düzenleme Sayfası</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                        @Html.HiddenFor(x => x.HizmetlerID, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Başlık</label>
                        @Html.TextBoxFor(x => x.HizmetlerBaslik, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                        @Html.TextBoxFor(x => x.HizmetlerAcıklama, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button class="btn btn-dark">İptal</button>
            </form>
        </div>
    </div>
</div>
</div>


